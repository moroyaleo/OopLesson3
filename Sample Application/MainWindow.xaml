<Window x:Class="Sample_Application.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sample_Application"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="990.574">
    <Grid HorizontalAlignment="Left" Height="450" Margin="0,-27,-8,-4" VerticalAlignment="Top" Width="991">

        <TextBox HorizontalAlignment="Left" Height="450" Margin="-1,-1,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="269" TextChanged="TextBox_TextChanged" RenderTransformOrigin="0.5,0.5">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-0.19"/>
                    <RotateTransform/>
                    <TranslateTransform X="-0.611"/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>

    </Grid>
</Window>
    
